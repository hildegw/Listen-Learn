<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.listen_learn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ListenActivity"
            android:parentActivityName=".MainActivity"
            android:label="Listening"/>
        <activity android:name=".PopularActivity"
            android:parentActivityName=".MainActivity"
            android:label="Popular"/>
        <activity android:name=".PlaylistActivity"
            android:parentActivityName=".MainActivity"
            android:label="My Playlist"/>
        <activity android:name=".BrowseActivity"
            android:parentActivityName=".MainActivity"
            android:label="Browse"/>

    </application>

</manifest>