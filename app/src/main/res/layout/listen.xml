<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.android.listen_learn.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/padding"
            android:src="@drawable/ic_chevron_left_black_24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_chevron_right_black_bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/padding"
            android:src="@drawable/ic_chevron_right_black_24dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/listen"
        style="@style/ButtonStyle"
        android:background="@color/colorAccentLight"
        android:text="@string/button_listen"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listen_info"
                style="@style/TextStyle"
                android:layout_margin="@dimen/padding"
                android:text="info"/>

            <TextView
                android:id="@+id/popular"
                style="@style/ButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:text="@string/button_popular"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/playlist"
                style="@style/ButtonStyle"
                android:background="@color/colorPrimary"
                android:text="@string/button_playlist"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/browse"
                style="@style/ButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:text="@string/button_browse"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/purpose"
                style="@style/TextStyle"
                android:layout_margin="@dimen/padding"
                android:text="purpose"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>